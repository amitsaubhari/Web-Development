  /* General Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Poppins', sans-serif;
  line-height: 1.6;
  color: #333;
  background-color: #f4f4f4;
  overflow-x: hidden;
}

/* Header Styles */
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background-color: #333;
  color: white;
}

header .logo h1 {
  font-size: 2rem;
  letter-spacing: 2px;
}

nav ul {
  display: flex;
  list-style: none;
}

nav ul li {
  margin-left: 20px;
}

nav ul li a {
  text-decoration: none;
  color: white;
  font-size: 1rem;
  font-weight: 600;
}

nav ul li a:hover {
  color: #f39c12;
  transition: color 0.3s ease;
}

/* Hero Section */
.hero {
  background: url('https://via.placeholder.com/1600x600') no-repeat center center/cover;
  color: white;
  text-align: center;
  padding: 100px 20px;
}

.hero-content h2 {
  font-size: 3rem;
  margin-bottom: 20px;
}

.hero-content p {
  font-size: 1.2rem;
  margin-bottom: 30px;
}

button {
  padding: 12px 25px;
  background-color: #333;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1.1rem;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #f39c12;
}

/* Info Section */
.info {
  display: flex;
  justify-content: space-around;
  padding: 50px 20px;
  background-color: #fff;
}

.info-card {
  text-align: center;
  width: 30%;
  background-color: #f4f4f4;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.info-card img {
  width: 80px;
  height: 80px;
  margin-bottom: 20px;
}

.info-card h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.info-card p {
  font-size: 1rem;
}

.info-card:hover {
  transform: translateY(-10px);
}

/* Contact Section */
.contact {
  background-color: #fff;
  padding: 50px 20px;
  text-align: center;
}

.contact h2 {
  font-size: 2.5rem;
  margin-bottom: 20px;
}

.contact p {
  font-size: 1.2rem;
  margin-bottom: 30px;
}

form {
  max-width: 600px;
  margin: 0 auto;
}

.form-group {
  margin-bottom: 20px;
  text-align: left;
}

label {
  display: block;
  font-weight: bold;
  margin-bottom: 8px;
}

input, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
}

textarea {
  height: 150px;
}

button[type="submit"] {
  width: 100%;
  padding: 12px;
  background-color: #333;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 1.2rem;
  cursor: pointer;
}

button[type="submit"]:hover {
  background-color: #f39c12;
}

/* Footer Styles */
footer {
  text-align: center;
  padding: 20px;
  background-color: #333;
  color: white;
}

footer .social-links {
  margin-top: 10px;
}

footer .social-links a {
  text-decoration: none;
  color: white;
  margin: 0 10px;
}

footer .social-links a:hover {
  color: #f39c12;
  transition: color 0.3s ease;
}

/* Media Queries for Responsiveness */

/* For Tablets (Portrait or Landscape) */
@media (max-width: 768px) {
  .info {
    flex-direction: column;
    align-items: center;
  }

  .info-card {
    width: 80%;
    margin-bottom: 20px;
  }

  .hero-content h2 {
    font-size: 2.5rem;
  }

  .hero-content p {
    font-size: 1.1rem;
  }

  .contact h2 {
    font-size: 2rem;
  }

  .contact p {
    font-size: 1.1rem;
  }
}

/* For Mobile Devices (Portrait) */
@media (max-width: 480px) {
  header {
    flex-direction: column;
    align-items: center;
  }

  .hero-content h2 {
    font-size: 2rem;
  }

  .hero-content p {
    font-size: 1rem;
  }

  .info-card {
    width: 100%;
  }

  button[type="submit"] {
    font-size: 1rem;
  }
}




